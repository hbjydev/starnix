[global/wm]
margin-top = 0
margin-bottom = 0

[settings]
screenchange-reload = true

################################################################################

[colors]
background = #00000000
background-transparent = #001c1f30
background-alt = #CCACED
background-alt-2 = #ff5fafcf
foreground = #C0C0C0
foreground-alt = #FFFFFF
red = #EFA6A2
green = #5ACCAF
yellow = #E0AF85
blue = #A3B8EF
purple = #CCACED
aqua = #74C3E4
orange = #E0AF85
white = #C0C0C0
grey = #808080

################################################################################

[bar/base]
font-0 = Terminus:size=14;0
font-1 = Siji:size=14;1
width = 100%
height = 24
offset-x = 0
offset-y = 0
fixed-center = true
monitor = ${env:MONITOR:}

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 0
underline-size = 0

border-bottom-size = 0
border-bottom-color = #ffffff

module-margin-left = 1
module-margin-right = 1

radius = 0.0

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

tray-position = none
tray-padding = 2
tray-background = ${root.background}
padding-left = 1
padding-right = 1

################################################################################

[bar/laptop-bottom]
inherit = bar/base
bottom = true

modules-left = workspaces-xmonad
modules-center = title-short
modules-right = date

[bar/bottom]
inherit = bar/base
bottom = true

modules-left = workspaces-xmonad
modules-center = title
modules-right = date

[bar/top]
inherit = bar/base
bottom = false

modules-left = volume
modules-center = filesystem
modules-right = wlp6s0 cpu memory

[bar/laptop-top]
inherit = bar/base
bottom = false

modules-left = volume
modules-center = filesystem
modules-right = wlp2s0 cpu memory

################################################################################

[module/title]
type = internal/xwindow
label-maxlen = 170

[module/title-short]
type = internal/xwindow
label-maxlen = 70

################################################################################

[module/ewmh]
type = internal/xworkspaces
pin-workspaces = true
enable-click = true
enable-scroll = true
reverse-scroll = true

format = <label-state>

label-active = %{F#9c71C7}[%{F-}%name%%{F#9c71C7}]%{F-}

label-urgent = " %name "
label-urgent-foreground = #9c71C7

label-empty = " %name% "
label-empty-foreground = #838383

[module/workspaces-xmonad]
type = custom/script
exec = tail -F /tmp/.xmonad-workspace-log
exec-if = [ -f /tmp/.xmonad-workspace-log ]
tail = true

################################################################################

[module/filesystem]
type = internal/fs
interval = 2

mount-0 = /
mount-1 = /home

label-mounted = %{F#CCACED}%mountpoint%%{F-} %free%
label-unmounted =
label-unmounted-foreground = ${colors.foreground}

################################################################################

[module/battery]
type = internal/battery
# ls -l /sys/class/power_supply
battery = BAT0
adapter = AC
full-at = 98

format-charging = %{F#CCACED}%{F-} <label-charging>
format-discharging = %{F#CCACED}%{F-} <label-discharging>

################################################################################

[module/cpu]
type = internal/cpu
interval = 1
format-prefix = "  %{F#CCACED}%{F-}"
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.grey}
label = %percentage:3%%

################################################################################

[module/memory]
type = internal/memory
interval = 1
format-prefix = "%{F#CCACED}%{F-}"
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.grey}
label = %percentage_used:3%%

################################################################################

[module/eth]
type = internal/network
interface = enp4s0
interval = 1.0
label-connected = %{A1:sh ~/.config/polybar/local_and_public_ips.sh:} %{F#9c71C7}%{F-}%downspeed:8%   %{F#9c71C7}%{F-}%upspeed:8%%{A}

################################################################################

[module/wifi]
type = internal/network
interval = 1.0
label-connected = %essid% %{A1:sh ~/.config/polybar/local_and_public_ips.sh:} %{F#9c71C7}%{F-}%downspeed:8%   %{F#9c71C7}%{F-}%upspeed:8%%{A}
format-connected = <label-connected>

[module/wlp2s0]
inherit = module/wifi
interface = wlp2s0

[module/wlp6s0]
inherit = module/wifi
interface = wlp6s0

################################################################################

[module/date]
type = internal/date
interval = 1

date = " %A %B %d"
time = %H:%M

format-prefix = "%{F#9c71C7}%{F-}"
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.grey}

label = %{F#6B5A68}%date%%{F-}  %time%

################################################################################

[module/volume]
type = internal/pulseaudio
interval = 1

label-volume = "%{F#9c71C7} %{F-}%percentage%%"
label-volume-foreground = ${root.foreground}

format-muted-prefix = "%{F#9c71C7}%{F-} "
format-muted-foreground = #6B5A68

; vim: set ft=dosini:
